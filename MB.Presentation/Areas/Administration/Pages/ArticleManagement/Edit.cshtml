@page "{id}"
@model MB.Presentation.Areas.Administration.Pages.ArticleManagement.EditModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Create New Article Category</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 col-sm-12">
                        <input type="hidden" asp-for="Command.ArticleId"/>
                        <div class="form-group">
                            <label for="Title" class="control-label">Title:</label>
                            <input asp-for="Command.Title" id="Title" class="form-control"/>
                            <span asp-validation-for="Command.Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="ShortDescription" class="control-label">Short Description:</label>
                            <textarea asp-for="Command.ShortDescription" id="ShortDescription" class="form-control" rows="5" ></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Content" class="control-label">Content:</label>
                            <textarea asp-for="Command.Content" id="Content" class="form-control" rows="10" ></textarea>
                        </div>
                        <div class="form-group">
                            <label for="Image" class="control-label">Image:</label>
                            <input asp-for="Command.Image" id="Image" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="ArticleCategory" class="control-label">ArticleCategory:</label>
                            <select asp-for="Command.ArticleCategoryId" asp-items="Model.ArticleCategories" id="ArticleCategory" class="form-control">
                                <option value="0">Please choose an article category</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administration">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>