@page "{id}"
@model MB.Presentation.Areas.Administration.Pages.ArticleCategoryManagement.EditModel
@{
}

<div class="card">
    <div class="card-header">
        <h2>Create New Article Category</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <input asp-for="RenameArticleCategoryCommand.Id" type="hidden"/>
                            <label for="Title" class="control-label">Title:</label>
                            <input asp-for="RenameArticleCategoryCommand.Title" id="Title" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Rename" class="btn btn-success" />
                        <a class="btn btn-dark" asp-page="./List" asp-area="Administration">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>